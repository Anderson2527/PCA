object pruebaScala {
  def main(args: Array[String]) {

    var op: String = "PC"

    println("Introduce una opcion: ")

    op = readLine.toString
    while (op != 0) {
      if (op == "PC") {
        println("Tecleaste la tecla magica %s", op)
      } else
        println("Continua Buscando la tecla magica")
    }

  }
}

